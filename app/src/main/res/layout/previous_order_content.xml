<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".dailyEntry.PreviousOrderGivenActivity"
    tools:showIn="@layout/activity_previous_order_given"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/side_shape"
        android:id="@+id/static_heading"
        android:visibility="visible" android:layout_marginTop="5dp"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SKU "
            android:textStyle="bold" android:id="@+id/month"
            android:textSize="10sp" android:singleLine="true"
            android:background="@drawable/side_shape"
            android:padding="5dp"

            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=" Quantity "
            android:id="@+id/consultativeselling"
            android:gravity="center_horizontal"
            android:textStyle="bold"         android:background="@drawable/side_shape"
            android:padding="5dp"

            android:textSize="10sp" android:singleLine="true"
            android:textColor="@color/black"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:textStyle="bold"         android:background="@drawable/side_shape"
android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:id="@+id/product"
            android:text="Amount"/>

    </LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recyclerview"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/side_shape"
        android:id="@+id/heading2"
        android:visibility="visible" android:layout_marginTop="5dp"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Total   "
            android:textStyle="bold"
            android:textSize="10sp" android:singleLine="true"
            android:background="@drawable/side_shape"
            android:padding="5dp"

            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:background="@drawable/side_shape"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:id="@+id/totalquantity"
            android:text=" "/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:textStyle="bold"         android:background="@drawable/side_shape"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:id="@+id/totalamount"
            android:text=" "/>

    </LinearLayout>
</LinearLayout>
    </ScrollView>
 </LinearLayout>