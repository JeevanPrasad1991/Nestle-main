<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/custom_margin"
        app:cardCornerRadius="@dimen/appbar_padding_top"
        android:layout_margin="@dimen/txt_3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_documets_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/txt_size2dp"
                android:gravity="center_vertical"
                android:text="personal Document"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14sp"
                android:padding="@dimen/appbar_padding_top"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/rl_two_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt_3dp"
                android:layout_marginLeft="@dimen/custom_margin"
                android:layout_marginRight="@dimen/custom_margin"
                android:layout_weight="10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/document_imge_one"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/hight40dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:src="@mipmap/camera_orange"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/document_imge_two"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/hight40dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:src="@mipmap/camera_orange"
                    android:layout_gravity="center"/>


                <LinearLayout
                    android:id="@+id/document_preview_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/txt_3dp"
                        android:src="@mipmap/preview_48"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Preview For First"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_very_small"
                        android:textStyle="normal" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/document_preview_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/txt_3dp"
                        android:src="@mipmap/preview_48"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Preview For Second"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_very_small"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_spin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/txt_3dp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/hight40dp"
                    android:layout_marginRight="@dimen/hight40dp"
                    android:background="@drawable/rouded_corner">
                    <Spinner
                        android:id="@+id/spin_TshirtSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>