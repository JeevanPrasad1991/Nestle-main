<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle_shape"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_shape"
        android:id="@+id/static_scoreheading"
        android:visibility="visible"
        android:weightSum="9">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=" "
            android:singleLine="true"
            android:textStyle="bold"
            android:id="@+id/month"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:background="@drawable/side_shapepurple"
            android:gravity="left"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=" "
            android:id="@+id/planstore"
            android:gravity="center_horizontal"
            android:textStyle="normal"
            android:background="@drawable/side_shape"
            android:textSize="10sp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="10sp" android:background="@drawable/side_shape"
            android:id="@+id/coveredstore"  android:singleLine="true"
            android:text=" "/>


    </LinearLayout>

</LinearLayout>
